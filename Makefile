###############################################################################
# Ledger App Makefile (Modern SDK Compatible)
###############################################################################

APPNAME = Honey
APPVERSION = 0.1.0
APP_LOAD_PARAMS = --curve secp256k1

###############################################################################
# Target device
###############################################################################

TARGETS = NANO_S_PLUS

###############################################################################
# Paths
###############################################################################

APP_SOURCE_PATH += src
SDK_SOURCE_PATH += sdk

###############################################################################
# Compiler flags
###############################################################################

CFLAGS += -Wall -Wextra -Werror
CFLAGS += -Iinclude

###############################################################################
# Application flags
###############################################################################

DEFINES += APPNAME=\"$(APPNAME)\"
DEFINES += APPVERSION=\"$(APPVERSION)\"

###############################################################################
# Ledger SDK boilerplate
###############################################################################

BOLOS_SDK ?= /opt/nanos-secure-sdk

include $(BOLOS_SDK)/Makefile.rules
